---
import { Icon } from 'astro-icon/components'
const { class: className } = Astro.props
---

<div
	class:list={[
		className,
		'border-[1px] border-foreground/30 dark:border-foreground-dark/30 rounded-full flex justify-center items-center text-foreground dark:text-foreground-dark transition-all duration-200 hover:border-foreground/60 dark:hover:border-foreground-dark/60 [&>*]:cursor-pointer',
	]}
>
	<button
		data-theme="theme-auto"
		aria-label="Auto Theme"
		title="Set theme to follow system preference"
		class="theme-button theme-auto"
	>
		<Icon
			name="mdi:brightness-auto"
			class:list="duration-0 text-2xl md:text-xl"
			aria-hidden
		/>
	</button>
	<button
		data-theme="theme-light"
		aria-label="Light Theme"
		title="Set theme to light"
		class="theme-button theme-light"
	>
		<Icon
			name="mdi:white-balance-sunny"
			class:list="duration-0 text-2xl md:text-xl"
			aria-hidden
		/>
	</button>
	<button
		data-theme="theme-dark"
		aria-label="Dark Theme"
		title="Set theme to dark"
		class="theme-button theme-dark"
	>
		<Icon
			name="mdi:moon-and-stars"
			class:list="duration-0 text-2xl md:text-xl"
			aria-hidden
		/>
	</button>
</div>

<style>
	@reference "../styles/global.css";

	button.theme-button {
		@apply p-1.5 rounded-full transition-all duration-200 hover:bg-foreground/10 dark:hover:bg-foreground-dark/10;
	}
	:global(button.active) {
		@apply text-background bg-foreground/90 dark:text-background-dark dark:bg-foreground-dark/90 scale-110;
	}
</style>
