---
interface Props {
  date: Date
}

const { date } = Astro.props
import dayjs from 'dayjs'
---

<time datetime={date.toISOString()}>
  <!-- {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  } -->
  {dayjs(date).format('D MMMM YYYY')}
</time>
