---
import { Icon } from 'astro-icon/components'
import FormattedDate from './FormattedDate.astro'

const { post } = Astro.props
---

<a
  href={`/blog/${post.slug}/`}
  class="flex flex-col gap-4 w-full h-full p-3 border-b border-r border-foreground/25 hover:bg-foreground/5 transition-colors"
>
  <img src={post.data.heroImage} alt="" class="w-full h-44 object-cover" />
  <h4 class="text-2xl">
    {post.data.title}
  </h4>
  <p class="font-light line-clamp-2">
    {post.data.description}
  </p>
  <div class="flex justify-between items-center mt-auto">
    <p class="uppercase font-light">
      <FormattedDate date={post.data.pubDate} />
    </p>
    <Icon name="mdi:arrow-right" size={24} />
  </div>
</a>
