---
import FormattedDate from './FormattedDate.astro'

const { post } = Astro.props
---

<!-- <a href={`/blog/${post.slug}/`} class="block bg-background"> -->
<a
  href={`/blog/${post.slug}/`}
  class="block border border-foreground rounded-lg overflow-hidden hover:bg-background h-full"
>
  <img width={720} height={360} src={post.data.heroImage} alt="" />
  <div class="p-4">
    <h4 class="text-2xl font-semibold py-2 leading-7 -mt-2">
      {post.data.title}
    </h4>
    <!-- <p class="py-2">
      {post.data.description}
    </p> -->
    <p>
      <FormattedDate date={post.data.pubDate} />
    </p>
  </div>
</a>
