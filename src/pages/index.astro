    link: 'https://workspace.google.com/intl/en_in/products/admin/',
  },
  {
    name: 'Flask',
    link: 'https://flask.palletsprojects.com/',
  },
  {
    name: 'WiX',
    link: 'https://wix.com/',
  },
  {
    name: 'Framer',
    link: 'https://framer.com/',
  },
  {
    name: 'WordPress',
    link: 'https://wordpress.org/',
  },
  {
    name: 'Linux',
    link: 'https://www.linuxfoundation.org/',
  },
]

const socials = [
  {
    name: 'GitHub',
    link: 'https://github.com/yashjawale',
    icon: 'mdi:github',
  },
  {
    name: 'LinkedIn',
    link: 'https://www.linkedin.com/in/yashjawale/',
    icon: 'mdi:linkedin',
  },
  {
    name: 'Twitter',
    link: 'https://twitter.com/imyashjawale',
    icon: 'mdi:twitter',
  },
  {
    name: 'Instagram',
    link: 'https://www.instagram.com/imyashjawale/',
    icon: 'mdi:instagram',
  },
