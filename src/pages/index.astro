---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4)
---

<BaseLayout>
	<main
		class="app-container flex flex-col gap-8 justify-center py-36 md:py-48 pt-44 md:pt-56 relative"
	>
		<!-- Name and Title -->
		<div class="space-y-4">
			<p class="block text-3xl opacity-70">Hi!, I'm</p>
			<h1 class="text-7xl md:text-8xl font-bold leading-none">Javier Jia</h1>
			<p class="text-2xl md:text-3xl opacity-80 font-light">
				Educator | Innovator | Software Engineering Enthusiast
			</p>
		</div>

		<!-- Current Role -->
		<div class="max-w-3xl space-y-3">
			<p class="text-xl font-medium text-primary dark:text-primary-dark">
				Module Leader - CHC5056 Innovative Product Development
			</p>
			<p class="text-lg opacity-90">
				BSc (Hons) Computer Science and BSc (Hons) Software Engineering
			</p>
			<p class="text-lg opacity-90">
				Chengdu University of Technology & Oxford Brookes University
			</p>
		</div>

		<!-- Brief Introduction -->
		<div class="max-w-3xl">
			<p class="text-lg leading-relaxed opacity-80">
				Passionate about innovative product development and computer science education.
				I focus on teaching students how to design, develop, and deploy real-world software
				solutions while fostering creativity and critical thinking.
			</p>
		</div>

		<!-- Social Links -->
		<div class="flex flex-wrap gap-6 items-center">
			{
				SocialLinks.map((link) => (
					<a
						class="text-lg text-primary dark:text-primary-dark hover:underline underline-offset-4 transition-all"
						href={link.url}
						target="_blank"
						rel="noopener noreferrer"
					>
						{link.name}
					</a>
				))
			}
		</div>
	</main>

	<!-- Recent Posts Section -->
	<section class="app-container">
		<h2 class="section-title">Recent Posts</h2>
		<div class="posts-grid-container">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary" href="/blog"
			>Read All
			<Icon size={20} name="mdi:arrow-right" />
		</a>
	</section>

	<!-- Recent Posts Section -->
	<section class="app-container py-42 grid lg:grid-cols-2 gap-28 lg:gap-10">
		<div class="space-y-6">
			<h2 class="section-title">Explore IPD Platform</h2>
			<p class="text-lg max-w-xl pb-4">
				Innovative Product Development platform - a comprehensive resource for
				students and educators in product development and software engineering.
			</p>
			<a
				class="btn-secondary"
				href="https://ipd.cdut-sinobritish.com/"
				target="_blank"
				>Go to IPD Platform
				<Icon size={20} name="mdi:arrow-right" />
			</a>
		</div>
		<div class="space-y-6">
			<h2 class="section-title">Get in touch</h2>
			<p class="text-lg max-w-xl">
				Feel free to reach out via email for collaboration or inquiries.
			</p>
			<div class="flex flex-wrap mt-auto">
				<a
					class="btn-primary"
					href="mailto:javier@zy.cdut.edu.cn"
					target="_blank"
					>Get in touch
					<Icon height={20} name="mdi:email" />
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
